import java.util.Scanner;

public class Rectangle {
    private int x1, y1;
    private int x2, y2;

    public void init(int x1, int y1, int x2, int y2) {
        this.x1 = x1;
        this.y1 = y1;
        this.x2 = x2;
        this.y2 = y2;
    }

    public void read() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите координаты верхнего левого угла (x1 y1): ");
        x1 = scanner.nextInt();
        y1 = scanner.nextInt();
        System.out.print("Введите координаты нижнего правого угла (x2 y2): ");
        x2 = scanner.nextInt();
        y2 = scanner.nextInt();
    }

    public void display() {
        System.out.println("Верхний левый угол: (" + x1 + ", " + y1 + ")");
        System.out.println("Нижний правый угол: (" + x2 + ", " + y2 + ")");
        System.out.println("Площадь прямоугольника: " + getArea());
    }

    public int getX1() {
        return x1;
    }

    public void setX1(int x1) {
        this.x1 = x1;
    }

    public int getArea() {
        return Math.abs((x2 - x1) * (y2 - y1));
    }

    public static Rectangle add(Rectangle r1, Rectangle r2) {
        Rectangle result = new Rectangle();
        result.init(r1.x1, r1.y1, r2.x2, r2.y2);
        return result;
    }

    public static void main(String[] args) {
        Rectangle rect1 = new Rectangle();
        Rectangle rect2 = new Rectangle();

        System.out.println("Введите данные для первого прямоугольника:");
        rect1.read();

        System.out.println("\nВведите данные для второго прямоугольника:");
        rect2.read();

        System.out.println("\nПервый прямоугольник:");
        rect1.display();

        System.out.println("\nВторой прямоугольник:");
        rect2.display();

        Rectangle rect3 = Rectangle.add(rect1, rect2);
        System.out.println("\nРезультат сложения прямоугольников:");
        rect3.display();
    }
}
