import java.util.InputMismatchException;
import java.util.Scanner;

public class App {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        int N = 0;
        while (true) {
            try {
                System.out.print(«Введите четное число N (размер массива): «);
                N = scan.nextInt();
                
                if (N <= 0) {
                    System.out.println(«Размер массива должен быть положительным числом!»);
                    continue;
                }
                
                if (N % 2 != 0) {
                    System.out.println(«N должно быть четным числом!»);
                    continue;
                }
                
                break;
            } catch (InputMismatchException e) {
                System.out.println(«Ошибка: введите целое число!»);
                scan.next();
            }
        }

        int[] array = new int[N];
        System.out.println(«Введите « + N + « целых чисел через пробел:»);
        
        for (int I = 0; I < N; i++) {
            while (true) {
                try {
                    array[i] = scan.nextInt();
                    break;
                } catch (InputMismatchException e) {
                    System.out.println(“Ошибка: введите целое число для элемента “ + (I + 1) + “!”);
                    scan.next();
                }
            }
        }

        swap(array);
        System.out.println(“Массив после замены половин:”);
        printArray(array);
        scan.close();
    }

    public static void swap(int[] arr) {
        int half = arr.length / 2;
        for (int I = 0; I < half; i++) {
            int temp = arr[i];
            arr[i] = arr[I + half];
            arr[I + half] = temp;
        }
    }
    public static void printArray(int[] arr) {
        for (int I = 0; I < arr.length; i++) {
            System.out.print(arr[i]);
            if (I < arr.length – 1) {
                System.out.print(“ “);
            }
        }
        System.out.println();
    }
}
